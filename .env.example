# Environment Variables
# Copy this file to .env.local and fill in the values

# Site URL
NEXT_PUBLIC_SITE_URL=https://georgian.support

# Contact Information
NEXT_PUBLIC_PHONE=+995 591 19 63 00
NEXT_PUBLIC_EMAIL=info@georgian-legal.group

# Database (PostgreSQL) - Shared with visitgeorgia
DATABASE_URL=postgresql://user:password@localhost:5432/visitgeorgia

# Telegram Bot (for form notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Telegram Bot for Orders (can use same as above or separate)
TELEGRAM_ORDER_BOT_TOKEN=your_telegram_order_bot_token
TELEGRAM_ORDER_CHAT_ID=your_telegram_order_chat_id

# Stripe Payment Integration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_... # Use sk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_... # Use pk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_... # Get from webhook settings for georgian.support endpoint

# SMS API (smsoffice.ge)
SMS_API_KEY=your_smsoffice_api_key

# SMTP Email Configuration (Mailcow)
SMTP_HOST=mail.georgian-legal.group
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@georgian.support
EMAIL_TO=info@georgian-legal.group

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# CRM Integration (optional)
CRM_API_KEY=your_crm_api_key
CRM_WEBHOOK_URL=https://your-crm.com/webhook

# Google Cloud Vision API (for passport OCR scanning)
GOOGLE_VISION_API_KEY=your_google_vision_api_key
