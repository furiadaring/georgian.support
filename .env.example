# Environment Variables
# Copy this file to .env.local and fill in the values

# Site URL
NEXT_PUBLIC_SITE_URL=https://georgian.support

# Contact Information
NEXT_PUBLIC_PHONE=+995 591 19 63 00
NEXT_PUBLIC_EMAIL=info@georgian.support

# Telegram Bot (for form notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email Service (e.g., SendGrid, Resend)
EMAIL_SERVICE_API_KEY=your_email_api_key
EMAIL_FROM=noreply@georgian.support
EMAIL_TO=info@georgian.support

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# CRM Integration (optional)
CRM_API_KEY=your_crm_api_key
CRM_WEBHOOK_URL=https://your-crm.com/webhook

# Google Cloud Vision API (for passport OCR scanning)
GOOGLE_VISION_API_KEY=your_google_vision_api_key
