# Environment Variables
# Copy this file to .env.local and fill in the values

# Site URL
NEXT_PUBLIC_SITE_URL=https://geresidency.com

# Contact Information
NEXT_PUBLIC_PHONE=+995 591 19 63 00
NEXT_PUBLIC_EMAIL=info@geresidency.com

# Telegram Bot (for form notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
